<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rectangal_radial_gradient"
    tools:context=".Login_Activity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="222dp"
        android:src="@drawable/xenon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.225" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="264dp"
        android:layout_height="83dp"
        android:fontFamily="@font/acme"
        android:text="If you have an account, then
use the Sign in button, otherwise
sign up to create a new account "
        android:layout_marginTop="15dp"
        android:textAlignment="center"
        android:textColor="#D8D6D6"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/appCompatButton"
        android:layout_marginTop="20dp"
        android:layout_width="220dp"
        android:layout_height="44dp"
        android:background="@drawable/button_background"
        android:fontFamily="@font/acme"
        android:text="Sign Up"
        android:textSize="19sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/sign_up"
        android:layout_marginTop="20dp"
        android:layout_width="220dp"
        android:layout_height="44dp"
        android:background="@drawable/button_background"
        android:fontFamily="@font/acme"
        android:text="Sign Up with Email"
        android:textSize="16sp"
        android:onClick="onSignUpOptionClick"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/sign_in"
        android:layout_marginTop="30dp"
        android:layout_width="220dp"
        android:layout_height="44dp"
        android:background="@drawable/button_background"
        android:fontFamily="@font/acme"
        android:text="Sign in with Email"
        android:textSize="16sp"
        android:onClick="onSignInOptionClick"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_up" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/acme"
        android:text="Developed by Typhon Inc."
        android:textColor="#DCDADA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="20dp"
        app:layout_constraintStart_toStartOf="parent" />




</androidx.constraintlayout.widget.ConstraintLayout>